<ul>
    <li class = "Menu-categoryLable">
     <%= section_title %> </li>
    <li class = "Menu_header" >
      Menu Item
      Rate
     </li>
     <% MenuItem.all.each do |menu| %>
        <% if menu.menu_category_id == cat_id %>
            <li class = "Menu_header">
            <label class="Item-container" >
            <%= menu.name %>
            <%= menu.price %> INR
            <a href="javascript:void(0)">
              <%= form_with(url: "/sessions/customer/#{menu.id}", method: "post") do %>
                 <input type="image" src = "../../plus-box.svg"/> </a>
             <% end %> </a>
            </li>
      <% end %>

    <% end %>
  </ul>
