<H1> Welcome Cafe Owner <H1>
<main>
      <section>
        <h5>Add Menu Item </h5>
            <%= form_with(url: "/owner", method: "post") do %>
                <ul>
                    <% MenuCategory.all.each do |menu| %>
                    <li style="list-style-type:none;">
                      <%= radio_button_tag "category", "green" %>
                      <%= menu.name %>
                    </li>
                    <% end %>
                </ul>
                <%= text_field_tag "name", nil, placeholder: "Add Name of Menu", autofocus: true %>
                <%= text_field_tag "description", nil, placeholder: "Add Description" %>
                <%= text_field_tag "price", nil, placeholder: "Add Price" %>
                <%= button_tag "Add" %>
          <% end %>
      </section>
      <section>
        <% MenuCategory.all.each do |menu| %>
          <%= render partial: "menu-category", locals: {
                       section_title: menu.name,
              
                     } %>
        <% end %>
      </section>
</main>
